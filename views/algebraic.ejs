      @keyframes drop-six {
        0% {
          opacity: 0;
          transform: rotate(-55deg) translate(20px);
          width: 10px;
        }
        20% {
          opacity: 1;
        }
        100% {
          transform: rotate(-55deg) translate(-9px);
          width: 0px;
          opacity: 0;
        }
      }

      @keyframes drop-seven {
        0% {
          opacity: 0;
          transform: translateY(-20px);
          height: 10px;
        }
        20% {
          opacity: 1;
        }
        100% {
          transform: translateY(2px);
          height: 0px;
          opacity: 0;
        }
      }
    </style>
